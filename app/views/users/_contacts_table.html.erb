<h3>Contacts</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Contact Name</th>
      <th scope="col">Email</th>
      <th scope="col">Tracked Stocks</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @user_contacts.each do |contact| %>
      <tr>
        <th scope="row", class="align-middle"><%= contact.full_name %></th>
        <td class="font-italic align-middle"><%= contact.email %></td>
        <td>
          <% contact.stocks.each do |stock| %>
            <span class="badge badge-info"><%= stock.ticker %></span>
          <%end %>
        </td>
        <td class="align-middle"><%= link_to connection_path(contact), method: :delete,
          data: { confirm: "Are you sure you want to stop following #{contact.full_name}?" } do%>
            <%= fa_icon "times", class: "text-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
