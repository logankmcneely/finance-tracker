<div class="container">
  <h1>My Portfolio</h1>

  <div class="search-area">
    <h3>Search Stocks</h3>
    <%= form_tag search_stock_path, method: :get do %>
    <div class="input-group">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true , class: 'form-control form-control-lg'%>
      <div class="input-group-append">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
        <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <% if @stock %>
  <div class="card card-header" id="my-portfolio-search-results">
    <strong>Symbol: </strong><%= @stock.ticker.upcase %>
    <strong>Name: </strong><%= @stock.name %>
    <strong>Last Price: </strong>$<%= @stock.last_price %>
  </div>
  <% end %>
</div>
