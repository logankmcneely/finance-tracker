<h3>Tracked Stocks <small>(<%= @tracked_stocks.count %>/10)</small></h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Ticker Symbol</th>
      <th scope="col">Company Name</th>
      <th scope="col">Last Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row"><%= stock.ticker %></th>
        <td><%= stock.name %></td>
        <td><%= stock.last_price %></td>
        <td><%= link_to user_stock_path(stock), method: :delete,
          data: { confirm: "Are you sure you would like to stop tracking #{stock.ticker} (#{stock.name})?" } do%>
            <i class="fa fa-times text-danger" id="tracked-stocks-remove-button"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
