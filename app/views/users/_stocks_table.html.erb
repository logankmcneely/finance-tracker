<h3>Tracked Stocks <small>(<%= @tracked_stocks.count %>/10)</small></h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Ticker Symbol</th>
      <th scope="col">Company Name</th>
      <th scope="col">Last Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tracked_stocks.each do |stock| %>
      <tr>
        <th scope="row" class="align-middle"><%= stock.ticker %></th>
        <td class="align-middle"><%= stock.name %></td>
        <td class="align-middle"><%= stock.last_price %></td>
        <td class="align-middle"><%= link_to user_stock_path(stock), method: :delete,
          data: { confirm: "Are you sure you would like to stop tracking #{stock.ticker} (#{stock.name})?" } do%>
            <%= fa_icon "times", class: "text-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
